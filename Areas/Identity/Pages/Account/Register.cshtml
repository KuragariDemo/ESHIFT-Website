@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<partial name="_ValidationScriptsPartial" />
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register - E-SHIFT</title>
</head>
<body style="margin:0; padding:0; font-family:Arial, sans-serif; background-color:#f1efe9;">

    <div style="
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    ">
        <div style="
            background-color: #f1efe9;
            padding: 40px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 360px;
            border-radius: 10px;
            text-align: center;
        ">
            <!-- Logo and Title -->
            <img src="~/images/logo.png" alt="Logo" style="width: 100px; height: auto; margin-bottom: 10px; border-radius: 15%;" />
            <h2 style="margin: 0 0 30px; color: #333; font-weight: bold;">E-SHIFT</h2>

            <!-- Register Form -->
            <form method="post" enctype="multipart/form-data">
                <!-- Name -->
                <input asp-for="Input.Name" placeholder="Full Name" style="
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: none;
    border-radius: 5px;
    background-color: #babcba;
    font-size: 16px;
" />
                <span asp-validation-for="Input.Name" style="color:red;"></span>
                <!-- Email -->
                <input asp-for="Input.Email" placeholder="Email" style="
                    width: 100%;
                    padding: 12px;
                    margin-bottom: 15px;
                    border: none;
                    border-radius: 5px;
                    background-color: #babcba;
                    font-size: 16px;
                " />

                <!-- Password -->
                <input asp-for="Input.Password" placeholder="Password" type="password" style="
                    width: 100%;
                    padding: 12px;
                    margin-bottom: 15px;
                    border: none;
                    border-radius: 5px;
                    background-color: #babcba;
                    font-size: 16px;
                " />

                <!-- Confirm Password -->
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" type="password" style="
                    width: 100%;
                    padding: 12px;
                    margin-bottom: 25px;
                    border: none;
                    border-radius: 5px;
                    background-color: #babcba;
                    font-size: 16px;
                " />

                <!-- Register Button -->
                <button type="submit" style="
                    background-color: #c7613c;
                    color: white;
                    border: none;
                    border-radius: 5px;
                    padding: 12px;
                    width: 100%;
                    font-size: 16px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                "
                        onmouseover="this.style.backgroundColor='#2891da';"
                        onmouseout="this.style.backgroundColor='#c7613c';">
                    Register
                </button>
            </form>
        </div>
    </div>
</body>
</html>
