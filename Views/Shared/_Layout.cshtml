<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShift</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EShift.styles.css" asp-append-version="true" />
    <!--TOP-BAR->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
    <body>
        <!-- TOP BAR -->
        <div class="top-bar d-flex justify-content-between align-items-center px-3 py-1 bg-light border-bottom">
            <div class="top-bar-left d-flex align-items-center">
                <span class="me-3">
                    <i class="fas fa-clock"></i> Opening Hours: 8:30 - 17:30
                </span>
                <span class="me-3">
                    <i class="fas fa-phone"></i> +66 123456789
                </span>
                <span>
                    <img src="/images/logo.png" alt="E-Shift Logo" style="height: 20px; margin-right: 15px; margin-top: 5px;border-radius: 15%;">   
                    <i class="fas fa-envelope"></i> eshift.com
                </span>
            </div>
            <div class="top-bar-right d-flex align-items-center">
            @await Html.PartialAsync("_LoginPartial")
            </div>

        </div>

        <!-- HEADER -->
        <header>
            <!-- existing navbar -->
        </header>

        <div class="container">
            <main role="main" class="pb-3">
            @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <!-- footer -->
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>


</html>
