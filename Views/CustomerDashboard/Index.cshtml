@model IEnumerable<EShift.Models.Customer>

@{
    ViewData["Title"] = "Customer Dashboard";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.Name</td>
                <td>@customer.Phone</td>
                <td>@customer.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "CustomerDashboard", new { id = customer.CustomerId })">Edit</a> |
                    <a href="@Url.Action("Delete", "CustomerDashboard", new { id = customer.CustomerId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
