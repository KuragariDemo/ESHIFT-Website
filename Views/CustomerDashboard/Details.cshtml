@model EShift.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Customer ID: @Model.CustomerId</h3>
    <p>Name: @Model.Name</p>
    <p>Phone: @Model.Phone</p>
    <p>Email: @Model.Email</p>
    <p>
        <a href="@Url.Action("Edit", "CustomerDashboard", new { id = Model.CustomerId })">Edit</a> |
        <a href="@Url.Action("Delete", "CustomerDashboard", new { id = Model.CustomerId })">Delete</a>
    </p>
</div>
