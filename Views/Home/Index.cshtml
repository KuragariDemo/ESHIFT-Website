@{
    ViewData["Title"] = "Home Page";
}
<!-- Banner Section -->
<section class="banner-section">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <!-- Left Side -->
        <div class="d-flex align-items-center">
            <img src="/images/logo.png" alt="E-Shift Logo" style="height: 30px; margin-right: 15px; margin-top: 5px; border-radius: 15%;">
            <h1 class="brand-text mb-0">E-SHIFT</h1>
        </div> 

        <!-- Right Side -->
        <div class="d-flex">
            <!-- Number #1 -->
            <div class="me-4 text-center">
                <h5 class="mb-1 text-orange">Number #1</h5>
                <p class="mb-0 text-black">in Thailand</p>
            </div>
            <!-- Satisfaction -->
            <div class="me-4 text-center">
                <h5 class="mb-1 text-yellow">Satisfaction</h5>
                <p class="mb-0 text-black">more than 90%</p>
            </div>
            <!-- Trusted By -->
            <div class="text-center">
                <h5 class="mb-1 text-blue">Trusted By</h5>
                <p class="mb-0 text-black">4000+ Clients</p>
            </div>
        </div>
    </div>


    <!-- Navigation Box -->
    <div class="container-fluid">
        <div class="nav-box d-flex justify-content-between align-items-center px-4 py-3">
            <a href="/" class="nav-btn">Home</a>
            <a href="/Services" class="nav-btn">Our Services</a>
            <a href="/About" class="nav-btn">About Us</a>
            <a href="/HQ" class="nav-btn">HQ</a>
            <a href="/Contact" class="nav-btn">Contact Us</a>
            <a href="/Quote" class="nav-btn quote-btn">Get a Quote</a>
        </div>
    </div>

    <!-- Content Box -->
    <div class="container-fluid">
        <div class="content-box">
            <div class="welcome-section">
                <div class="welcome-text">
                    <p class="welcome-top">Welcome to</p>
                    <p class="welcome-bottom">E-SHIFT</p>
                </div>
                <img src="~/images/logo.png" alt="E-SHIFT Logo" class="eshift-logo" />
            </div>
            <p class="intro-text">
                No matter the size scope of your move, with 20+ years experience in the mobility industry,
                E-Shift Relocations (Thailand) accommodates any move that is needed by clients.
            </p>
            <div class="button-container">
                <a href="#" class="action-btn learn-more-btn">Learn More</a>
                <a href="#" class="action-btn contact-us-btn">Contact Us</a>
            </div>
        </div>
    </div>
</section>
     
<div class="section-gap"></div>

<!-- Services Section -->
<section class="main-section services-section">
<h2 class="services-heading">Our Services</h2>

<div class="services-grid">
    <!-- Service Box 1 -->
    <div class="service-box">
        <div class="service-img">
            <img src="~/images/domestic-move.jpg" alt="Domestic Move">
        </div>
        <div class="service-content">
            <h3>Domestic Move</h3>
            <p>We handle your domestic relocation with utmost care and professionalism.</p>
        </div>
        <a href="#" class="service-btn">Learn More</a>
    </div>

    <!-- Service Box 2 -->
    <div class="service-box">
        <div class="service-img">
            <img src="~/images/office-move.jpg" alt="Office Move">
        </div>
        <div class="service-content">
            <h3>Office Move</h3>
            <p>Seamless relocation for your office space and assets.</p>
        </div>
        <a href="#" class="service-btn">Learn More</a>
    </div>

    <!-- Service Box 3 -->
    <div class="service-box">
        <div class="service-img">
            <img src="~/images/storage.jpg" alt="Storage Services">
        </div>
        <div class="service-content">
            <h3>Storage Services</h3>
            <p>Secure storage solutions tailored to your needs.</p>
        </div>
        <a href="#" class="service-btn">Learn More</a>
    </div>

    <!-- Service Box 4 -->
    <div class="service-box">
        <div class="service-img">
            <img src="~/images/additional-services.jpg" alt="Additional Services">
        </div>
        <div class="service-content">
            <h3>Additional Services Request</h3>
            <p>Customized services to fit your unique requirements.</p>
        </div>
        <a href="#" class="service-btn">Learn More</a>
    </div>
</div>

<!-- Decorative Line -->
<div class="section-divider"></div>
</section>

</section>



