        </div>

        <!-- Contact Us -->
        <div class="footer-column">
            <h3>Contact Us</h3>
            <a href="mailto:eshift.com">Email: eshift.com</a>
            <a href="tel:+66123456789">Phone: +66 123456789</a>
            <a href="mailto:gm@eshift.com">Branch Manager: gm@eshift.com</a>
        </div>
    </div>
</section>
