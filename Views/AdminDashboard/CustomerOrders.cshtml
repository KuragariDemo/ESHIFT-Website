@model List<EShift.Models.CustomerOrder>

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Title"] = "Customer Orders";
}

<h2 class="center-heading">Customer Orders</h2>

<div class="search-bar-container" style="margin-bottom: 20px;">
    <form asp-action="Index" method="get" style="display: flex; justify-content: flex-end;">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search orders..." />
        <button type="submit">Search</button>
    </form>
</div>


<div class="car-table-container">
    <table class="car-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>From</th>
                <th>To</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Name</th>
                <th>Unit Type</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.FromAddress</td>
                    <td>@order.ToAddress</td>
                    <td>@order.Email</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.Name</td>
                    <td>@order.UnitType</td>
                    <td>
                        @if (order.Status == "Accepted")
                        {
                            <span class="status-accepted">Accepted</span>
                        }
                        else if (order.Status == "Finished")
                        {
                            <span class="status-finished">Finished</span>
                        }
                        else
                        {
                            <span class="status-pending">Pending</span>
                        }
                    </td>
                    <td>
                        @if (order.Status == "Pending")
                        {
                            <a class="btn-primary" href="@Url.Action("AssignJob", "AdminCustomerOrder", new { id = order.OrderId })">Assign Job</a>
                        }
                        else
                        {
                            <span class="btn-disabled">Assigned</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
