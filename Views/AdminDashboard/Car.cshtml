@model List<EShift.Models.Car>

@{
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
    ViewData["Title"] = "Car Table";
}
<div class="car-table-header">
    <h2>Cars Management</h2>
    <a href="@Url.Action("Create", "Car")" class="btn-add">+ Add Car</a>
</div>

<div class="search-bar-container">
    <form asp-controller="Car" asp-action="Index" method="get">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by type, license, or model..." />
        <button type="submit">Search</button>
    </form>
</div>

<div class="car-table-container">
    <table class="car-table">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Car Type</th>
                <th>Car License No</th>
                <th>Car Model</th>
                <th>Status</th>
                <th>Assigned Job</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.CarID</td>
                    <td>@car.CarType</td>
                    <td>@car.CarLicenseNo</td>
                    <td>@car.CarModel</td>
                    <td>
                        @if (car.Status == "Busy")
                        {
                            <span class="status-busy">Busy</span>
                        }
                        else if (car.Status == "Under Maintenance")
                        {
                            <span class="status-maintenance">Under Maintenance</span>
                        }
                        else
                        {
                            <span class="status-available">Available</span>
                        }
                    </td>
                    <td>@(string.IsNullOrEmpty(car.AssignedJobId) ? "NON" : car.AssignedJobId)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Car", new { id = car.CarID })" class="action-btn btn-edit">Edit</a>
                        <a href="@Url.Action("Delete", "Car", new { id = car.CarID })" class="action-btn btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

